# ===========================================
# WATCHHUB - CONFIGURACIÓN DE ENTORNO
# ===========================================

# ===========================================
# CONFIGURACIÓN DE SUPABASE
# ===========================================
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# CONFIGURACIÓN DE STRIPE
# ===========================================
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===========================================
# CONFIGURACIÓN DE PAYPAL
# ===========================================
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================
VITE_APP_NAME=WatchHub
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:5173/api

# ===========================================
# CONFIGURACIÓN DE CONTENIDO Y MEDIOS
# ===========================================
VITE_STORAGE_BUCKET_URL=your_supabase_storage_url
VITE_CDN_URL=your_cdn_url

# ===========================================
# CONFIGURACIÓN DE SERVICIOS EXTERNOS
# ===========================================
# Para integración con servicios de contenido (opcional)
TMDB_API_KEY=your_tmdb_api_key
OMDB_API_KEY=your_omdb_api_key

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
NODE_ENV=development
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# ===========================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ===========================================
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@watchhub.com

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# ===========================================
# CONFIGURACIÓN DE ANALYTICS
# ===========================================
VITE_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
VITE_HOTJAR_ID=your_hotjar_id

# ===========================================
# CONFIGURACIÓN DE CLOUD STORAGE (OPCIONAL)
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# ===========================================
# CONFIGURACIÓN DE REDIS (PARA CACHE)
# ===========================================
REDIS_URL=your_redis_url
REDIS_PASSWORD=your_redis_password
